        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Modelo: </label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Veiculo.Modelo, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Chassi: </label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Veiculo.Chassi, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Placa: </label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Veiculo.Placa, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Ano: </label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Veiculo.Ano, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Possui Alarme: </label>
        <div class="col-sm-10">
            <div class="form-check">
                <div>
                    @Html.RadioButtonFor(model => model.Veiculo.PossuiAlarme, "Sim", new { @class = "form-check-input", disabled = "disabled", @readonly = "readonly" })
                    <label class="form-check-label" style="margin-right:30px">
                        Sim
                    </label>
                    @Html.RadioButtonFor(model => model.Veiculo.PossuiAlarme, "Não", new { @class = "form-check-input", disabled = "disabled", @readonly = "readonly" })
